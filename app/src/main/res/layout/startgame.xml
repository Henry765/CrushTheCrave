<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/bg" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical"
    android:weightSum="1"
    >

    <TextView android:id="@+id/Score" android:layout_width="186dp"
		android:layout_height="wrap_content" android:text="@string/Score"
		android:textColor="#FFFFFFFF" android:textStyle="bold" android:textSize="75px"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/Life"
        android:layout_toStartOf="@+id/Life">

	</TextView>

    <TextView android:id="@+id/Life" android:layout_width="126dp"
        android:layout_height="wrap_content" android:text="@string/Life"
        android:textColor="#ffffffff" android:textSize="75px" android:textStyle="bold"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/gridview"
        android:layout_alignEnd="@+id/gridview"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp">

    </TextView>
    <GridView android:id="@+id/gridview"
        android:verticalSpacing="0px" android:horizontalSpacing="0px"
		android:stretchMode="columnWidth" android:gravity="center"
		android:layout_width="334dp" android:layout_height="440dp"
        android:numColumns="2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

	</GridView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highestScore"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/gridview"
        android:layout_alignEnd="@+id/gridview"
        android:layout_alignBottom="@+id/Life"
        android:layout_toRightOf="@+id/Life"
        android:layout_toEndOf="@+id/Life" />


</RelativeLayout>
    