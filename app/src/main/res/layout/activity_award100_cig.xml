<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hrzhulocal.crushthecraveprototype2.Committed"
    android:background="@drawable/bg"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 Cigarettes not smoked"
        android:id="@+id/textView105"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:textColor="#ffffffff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_below="@+id/textView105"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONGRATULATIONS!"
        android:id="@+id/textView106"
        android:textColor="#ffffffff"
        android:visibility="invisible"
        android:layout_below="@+id/imageButton30"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This Award is obtained when you reach 100 cigarettes not smoked."
        android:id="@+id/textView107"
        android:textColor="#ffffffff"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/imageButton30"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fb_share_button"
        android:layout_marginTop="55dp"
        android:background="@drawable/btnsighup_new"
        android:layout_below="@+id/textView107"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE"
        android:id="@+id/textView108"
        android:layout_alignTop="@+id/fb_share_button"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton30"
        android:background="@drawable/iconlock_sel"
        android:layout_alignTop="@+id/imageView3"
        android:layout_centerHorizontal="true" />
</RelativeLayout>